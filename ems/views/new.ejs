<% include header %>

<% include navbar %>

<div role="main" class="container">
    <br><br>
    <div class="jumbotron">
        <h2><%= message %></h2>

        <form method="post" action="/process">

            <div class="form-group">

              <label for=" txtFirstName" name="txtFirstName">First Name:</label>
              <input name="txtFirstName" value="" placeholder="First Name" type="text">

            </div>

            <div class="form-group">

                <label for=" txtLastName" name="txtLastName">First Name:</label>
                <input name="txtLastName" value="" placeholder="Last Name" type="text">

            </div>

            <div class="form-group">

                <!-- CSRF token -->

                <input name="_csrf" value="<%= csrfToken %>" type="hidden">

                <button type="submit" class="btn btn-primary float-right">Submit</button>
            </div>

        </form>

    </div>

</div>

